    <Grid
        Width="auto"
        Height="auto"
        Background="#FF000C1D">
        <TextBlock
            x:Name="textBlock"
            Width="804"
            MinWidth="760"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="Algerian"
            FontSize="80"
            Foreground="White"
            RenderTransformOrigin="0.5,0.5"
            Text="Welcome To Chatto">
            <TextBlock.RenderTransform>
                <CompositeTransform />
            </TextBlock.RenderTransform>
        </TextBlock>
        <Grid
            Width="1920"
            Height="1080"
            Opacity="0.06">

            <Grid.Background>
                <ImageBrush ImageSource="/Assets/images/bg4.png" />
            </Grid.Background>
        </Grid>
        <StackPanel
            x:Name="stackPanel"
            Width="320"
            Height="584"
            Padding="30,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#FF2C6490"
            CornerRadius="15"
            RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <CompositeTransform />
            </StackPanel.RenderTransform>
            <TextBlock
                Margin="0,40,0,50"
                HorizontalAlignment="Center"
                CharacterSpacing="100"
                FocusVisualPrimaryBrush="Black"
                FontFamily="Reef"
                FontSize="42"
                FontWeight="Normal"
                Foreground="White"
                Text="LOGIN"
                TextAlignment="Center"
                TextWrapping="NoWrap" />
            <TextBlock
                Margin="0,0,0,5"
                HorizontalAlignment="Center"
                CharacterSpacing="200"
                FontFamily="Reef"
                FontSize="15"
                FontWeight="Normal"
                Foreground="White"
                Text="Phone Number"
                TextWrapping="NoWrap" />
            <TextBox
                x:Name="phoneNumber_txt"
                Margin="0,0,0,20"
                Background="{x:Null}"
                BorderBrush="#FFFFFF"
                BorderThickness="3"
                CornerRadius="7"
                TextWrapping="NoWrap" />
            <TextBlock
                Margin="0,0,0,5"
                HorizontalAlignment="Center"
                CharacterSpacing="200"
                FontFamily="Reef"
                FontSize="15"
                FontWeight="Normal"
                Foreground="White"
                Text="Password"
                TextWrapping="NoWrap" />
            <PasswordBox
                x:Name="password_txt"
                Background="{x:Null}"
                BorderBrush="#FFFFFF"
                BorderThickness="3"
                CornerRadius="7" />
            <Button
                x:Name="login_btn"
                Width="260"
                Height="37"
                Margin="0,50,0,20"
                HorizontalAlignment="Center"
                Background="#FF000C1D"
                CharacterSpacing="200"
                Click="login_btn_Click"
                Content="Login"
                CornerRadius="7"
                FontFamily="Reef"
                FontSize="15"
                Foreground="White" />
            <Button
                x:Name="createAcc_btn"
                Width="260"
                Height="37"
                Background="#FF000C1D"
                CharacterSpacing="200"
                Click="createAcc_btn_Click"
                Content="Create Account"
                CornerRadius="7"
                FontFamily="Reef"
                FontSize="15"
                Foreground="White" />
        </StackPanel>



    </Grid>
